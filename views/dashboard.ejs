<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <!-- Materialize dependency -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.css" media="screen,projection" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>

  <div class="container">
    <h1>DASHBOARD</h1>
  </div>

  <div class="container">
    <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s2"><a class="active" href="#tab-pens">Pens</a></li>
          <li class="tab col s2"><a href="#tab-project">Projects</a></li>
          <li class="tab col s2"><a href="#tab-collections">Collections</a></li>
          <li class="tab col s2"><a href="#tab-deleted">Deleted</a></li>
        </ul>

      </div>
      <div id="tab-pens" class="col s12">

        <div class="row">
          
          <div class="col s4 valign-wrapper">
            <div class="col s2">
              <span>Search</span>
            </div>
            <div class="input-field col s6">
              <input placeholder="Search for..." id="search-pens" type="text">
            </div>
            <div class="input-field col s4">
              <button class="btn waves-effect waves-light" type="search-submit" name="action">Search</button>
            </div>
          </div>

          <div class="col s4 valign-wrapper">
            <div class="col s2">
              <span>View</span>
            </div>
            <div class="input-field col s10">
                <select class="browser-default">
                  <option value="1" selected>All</option>
                  <option value="2">All my Pens (no forks)</option>
                  <option value="3">Public</option>
                  <option value="4">Private</option>
                  <option value="5">Template</option>
                  <option value="6f">Fork</option>
                
                </select>
            </div>
          </div>
       
          <div class="col s4 valign-wrapper">
            <div class="col s2">
              <span>Tag</span>
            </div>
            <div class="input-field col s10">
              <input placeholder="Keyword..." id="search-pens" type="text">
              <!-- Input + Dropdown -->
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col s2">Grid/List</div>
          <div class="col s2">Sort Direction</div>
          <div class="col s4">Sort By</div>
        </div>
              


      </div>
      </div>

      <div id="tab-project" class="col s12">
        <h2>WIP</h2>
      </div>

      <div id="tab-collections" class="col s12">
        <h2>WIP</h2>
      </div>

      <div id="tab-deleted" class="col s12">
        <h2>WIP</h2>
      </div>
    </div>
  </div>



  <script type="text/javascript" src="/javascripts/jquery-3.4.1.js"></script>
  <script type="text/javascript" src="/javascripts/materialize.js"></script>

  <!-- TODO: Create a javascript file  -->
  <script>

    $(document).ready(function () {
      $('.tabs').tabs();
      $('select').formSelect();


    });

  </script>

</body>


</html>